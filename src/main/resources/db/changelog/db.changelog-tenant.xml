<?xml version="1.0" ?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
  <changeSet id="init-tenant-schema" author="nikola">
    <createTable tableName="user">
      <column name="user_id" type="UUID">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="first_name" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>
      <column name="last_name" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>
      <column name="email" type="VARCHAR(255)">
        <constraints nullable="false" unique="true"/>
      </column>
      <column name="phone" type="VARCHAR(255)">
        <constraints nullable="false" unique="true"/>
      </column>
      <column name="password" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>
      <column name="role" type="VARCHAR(50)">
        <constraints nullable="false"/>
      </column>
      <column name="password_reset_required" type="BOOLEAN">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <createTable tableName="service">
      <column name="service_id" type="UUID">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="name" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>
      <column name="description" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>
      <column name="duration" type="VARCHAR(50)">
        <constraints nullable="false"/>
      </column>
      <column name="price" type="DECIMAL(10,2)">
        <constraints nullable="false"/>
      </column>
    </createTable>
    <createTable tableName="employee">
      <column name="employee_id" type="UUID">
        <constraints primaryKey="true" nullable="false"/>
      </column>
    </createTable>
    <addForeignKeyConstraint baseTableName="employee"
                            baseColumnNames="employee_id"
                            referencedTableName="user"
                            referencedColumnNames="user_id"/>
    <createTable tableName="employee_availability">
      <column name="availability_id" type="UUID">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="employee_id" type="UUID">
        <constraints nullable="false"/>
      </column>
      <column name="date" type="DATE">
        <constraints nullable="false"/>
      </column>
    </createTable>
    <createTable tableName="time_slot">
      <column name="slot_id" type="UUID">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="availability_id" type="UUID">
        <constraints nullable="false"/>
      </column>
      <column name="start_time" type="TIME">
        <constraints nullable="false"/>
      </column>
      <column name="end_time" type="TIME">
        <constraints nullable="false"/>
      </column>
      <column name="status" type="VARCHAR(50)">
        <constraints nullable="false"/>
      </column>
      <column name="appointment_id" type="UUID"/>
    </createTable>
    <createTable tableName="appointment">
      <column name="appointment_id" type="UUID">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="employee_id" type="UUID">
        <constraints nullable="false"/>
      </column>
      <column name="customer_id" type="UUID">
        <constraints nullable="false"/>
      </column>
      <column name="service_id" type="UUID">
        <constraints nullable="false"/>
      </column>
      <column name="appointment_time" type="TIMESTAMP">
        <constraints nullable="false"/>
      </column>
      <column name="status" type="VARCHAR(50)">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>
</databaseChangeLog>
